<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="123dp">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearLayout3"
            android:weightSum="1">

            <ImageView
                android:id="@+id/profilePicture"
                android:layout_width="105dp"
                android:layout_height="90dp"
                android:layout_weight="0.21"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <Button
                android:id="@+id/uploadPicButton"
                android:layout_width="105dp"
                android:layout_height="30dp"
                android:text="Upload"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Name："
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/linearLayout3"
            android:layout_toEndOf="@+id/linearLayout3" />

        <EditText
            android:id="@+id/name"
            android:layout_width="100dp"
            android:layout_height="313dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Name"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/textView11"
            android:layout_toEndOf="@+id/textView11" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Rating:"
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.DeviceDefault.Light.RatingBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="79dp"
            android:layout_marginRight="79dp"
            android:numStars="5"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Age："
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Age" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Email："
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/emailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="textEmailAddress"
            android:text="Email Address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Address："
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/emailAddress"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPostalAddress"
            android:text="User Address" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="12sp"
            android:text="Interests："
            android:textAlignment="viewStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="21sp" />

        <EditText
            android:id="@+id/interests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignEnd="@+id/address"
            android:layout_alignRight="@+id/address"
            android:layout_below="@+id/address"
            android:layout_marginTop="11dp"
            android:layout_weight="1"
            android:ems="10"
            android:enabled="false"
            android:inputType="textPersonName"
            android:text="Interests" />

    </LinearLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewProductsButton"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Comfirm" />

    <Button
        android:id="@+id/previousProducts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="Previous Purchases" />

    <Button
        android:id="@+id/favoriteUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/previousProducts"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="View Favorite Users" />

    <Button
        android:id="@+id/viewProductsButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/interests"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:text="View my Products" />

</LinearLayout>