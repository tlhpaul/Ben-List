<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.upenn.benslist.SearchUsers">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/searchUserBarText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Enter User's Name Below: "
            android:textAlignment="center" />

        <SearchView
            android:id="@+id/editUserSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/searchUserBarText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/searchUserButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/editUserSearch"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/goBackToHomePageButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go Back To Home Page"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_marginTop="68dp"
            android:layout_below="@+id/searchUserButton"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</ScrollView>